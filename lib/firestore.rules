rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    match /bookings/{bookingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        (request.resource.data.customerId == request.auth.uid) ||
        (resource.data.assignedCaterer == request.auth.uid) ||
        (request.auth.token.admin == true)
      );
      allow delete: if request.auth.token.admin == true;
    }

    match /vacancies/{vacancyId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && (
        request.resource.data.employerId == request.auth.uid ||
        request.auth.token.admin == true
      );
    }

    match /applications/{appId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null &&
        request.resource.data.workerId == request.auth.uid;
      allow update: if request.auth != null && (
        request.resource.data.workerId == request.auth.uid ||
        request.auth.token.admin == true
      );
      allow delete: if request.auth.token.admin == true;
    }

    match /wallet/{walletId} {
      allow read, write: if request.auth != null && request.auth.uid == walletId;
    }

    match /transactions/{txnId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }

    match /admin/{docId} {
      allow read, write: if request.auth.token.admin == true;
    }

    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
